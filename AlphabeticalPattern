#include <iostream>
using namespace std;

int main() {
    int n = 5;
    char ch = 'A';
    for (int i = 0; i < n; i++) {
        for (int j = 0; j <= i; j++)
            cout << (char)(ch+i) << " ";
        cout << endl;
    }
    
    cout<<"Alphabetical pyramid with increasing and decreasing pattern"<<endl<<endl;
    for (int i = 0; i < n; i++) {
        // spaces
        for (int j = 0; j < n-i-1; j++)
            cout << "  ";

        // alphabets
        for (int j = 0; j < 2*i+1; j++)
            cout << (char)('A' + j) << " ";

        cout << endl;
 
}

}
